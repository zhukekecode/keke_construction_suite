<odoo>
    <data>
        <!-- explicit list view definition -->

        <!--search all-->
        <record model="ir.ui.view" id="hero_purchase.site_search_all">
            <field name="name">hero_purchase.site.search.all</field>
            <field name="model">hero_purchase.site</field>
            <field name="arch" type="xml">
                <search>
                    <filter string="Today Submit" name="today"
                            domain="[('submit_date','&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))),('submit_date','&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                    <filter name="groupby_date" string="Date" context="{'group_by': 'submit_date'}"/>
                    <filter name="groupby_submitter" string="Submitter" context="{'group_by': 'user_id'}"/>
                    <filter name="groupby_status" string="Status" context="{'group_by': 'status'}"/>
                </search>
            </field>
        </record>

        <!-- list view-->
        <record model="ir.ui.view" id="hero_purchase.site_list_all">
            <field name="name">hero_purchase site list</field>
            <field name="model">hero_purchase.site</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="submit_date"/>
                    <field name="purchase_date"/>
                    <field name = "item_ids"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="hero_purchase.site_form_all">
            <field name="name">hero_purchase site form</field>
            <field name="model">hero_purchase.site</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="status" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="user_id"/>
                            <field name="submit_date"/>
                            <field name="purchase_date"/>
                        </group>
                        <group>
                            <field name="note"/>
                            <field name="attachment_id" widget="many2many_binary"/>
                        </group>
                        <notebook>
                            <page string="Details">
                                <field name="item_ids">
                                    <tree editable="bottom">
                                        <field name="project_id"/>
                                        <field name="task_id"/>
                                        <field name="item"/>
                                        <field name="quantity"/>
                                        <field name="unit"/>
                                        <field name="price"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!--form view my-->
        <record model="ir.ui.view" id="hero_purchase.site_list_my">
            <field name="name">hero_purchase site list</field>
            <field name="model">hero_purchase.site</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="purchase_date"/>
                    <field name = "item_ids"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="hero_purchase.site_form_my">
            <field name="name">hero_purchase site form</field>
            <field name="model">hero_purchase.site</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="purchase_date"/>
                            <field name="note"/>
                            <field name="attachment_id" widget="many2many_binary"/>
                        </group>
                        <notebook>
                            <page string="Details">
                                <field name="item_ids">
                                    <tree editable="bottom">
                                        <field name="project_id"/>
<!--                                        <field name="project_id"-->
<!--                                               options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"-->
<!--                                               domain="[('task_ids','!=', False),('status', '=', 'to_process')]" widget="selection"/>-->
                                        <field name="task_id"/>
                                        <field name="item"/>
                                        <field name="quantity"/>
                                        <field name="unit"/>
                                        <field name="price"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="hero_purchase.action_site_all">
            <field name="name">All Site Purchase</field>
            <field name="res_model">hero_purchase.site</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_today': 1}</field>
            <field name="search_view_id" ref="hero_purchase.site_search_all"/>
            <field name="view_ids"
                   eval="[
                        (5, 0, 0),
                        (0, 0, {'view_mode': 'tree', 'view_id': ref('hero_purchase.site_list_all')}),
                        (0, 0, {'view_mode': 'form', 'view_id': ref('hero_purchase.site_form_all')}),
                    ]"/>
        </record>

        <record model="ir.actions.act_window" id="hero_purchase.action_site_my">
            <field name="name">My Site Purchase</field>
            <field name="res_model">hero_purchase.site</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_today': 1}</field>
            <field name="domain">[('user_id', '=', uid)]</field>
            <field name="view_ids"
                   eval="[
                        (5, 0, 0),
                        (0, 0, {'view_mode': 'tree', 'view_id': ref('hero_purchase.site_list_my')}),
                        (0, 0, {'view_mode': 'form', 'view_id': ref('hero_purchase.site_form_my')}),
                    ]"/>
        </record>

        <!-- Top menu item -->

        <menuitem name="Hero Purchase" id="hero_purchase.menu_root"
                  web_icon="hero_purchase,static/description/icon.png"/>

        <!-- menu categories -->

        <menuitem name="Site Purchase" id="hero_purchase.site" parent="hero_purchase.menu_root"/>

        <!-- actions -->

        <menuitem name="All Purchase" id="hero_purchase.site_all" parent="hero_purchase.site"
                  action="hero_purchase.action_site_all"/>
        <menuitem name="My Purchase" id="hero_purchase.site_my" parent="hero_purchase.site"
                  action="hero_purchase.action_site_my"/>

    </data>
</odoo>