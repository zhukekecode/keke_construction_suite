<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="base.module_timesheet" model="ir.module.category">
        <field name="name">Timesheet</field>
        <field name="sequence">3</field>
    </record>

    <record id="group_timesheet_user" model="res.groups">
        <field name="name">Timesheet User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="base.module_timesheet"/>
    </record>

    <record id="group_timesheet_constructor" model="res.groups">
        <field name="name">Constructor</field>
        <field name="implied_ids" eval="[(4, ref('group_timesheet_user'))]"/>
        <field name="category_id" ref="base.module_timesheet"/>
    </record>

    <record id="group_timesheet_manager" model="res.groups">
        <field name="name">Timesheet Manager</field>
        <field name="implied_ids" eval="[(4, ref('group_timesheet_constructor'))]"/>
        <field name="category_id" ref="base.module_timesheet"/>
    </record>

    <record model="ir.ui.menu" id="timesheet.construction">
        <field name="name">timesheet.construction</field>
        <field name="groups_id" eval="[(6,0,[ref('group_timesheet_constructor'),ref('group_timesheet_manager')])]"/>
        <field name="sequence">1</field>
    </record>

    <record model="ir.ui.menu" id="timesheet.construction_all">
        <field name="name">timesheet.construction_all</field>
        <field name="groups_id" eval="[(6,0,[ref('group_timesheet_manager')]),]"/>
        <field name="sequence">1</field>
    </record>
</odoo>
